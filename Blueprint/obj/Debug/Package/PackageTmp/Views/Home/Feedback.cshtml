@model IEnumerable<Blueprint.Models.FeedbackItem>

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListCourse = Model.Select(item => new { 
        ID = item.CourseID, Name = item.CourseName
    }).Distinct();
}

<style>
    .show-up {
        top: 50px;
        left: calc((100% - 900px)/2);
        width: 900px;
        display: block !important;
        opacity: 1 !important;
        max-height: 90%;
        overflow-y: auto;
        overflow-x: hidden;
    }

    @@media (max-width: 900px) {
        .show-up {
            left: calc(10% /2);
            width: 90%;
        }
    }
</style>
@Styles.Render("~/Content/animate.css")
@Styles.Render("~/Content/tab_skinable.css")
@Scripts.Render("~/Scripts/jquery-ui-1.11.4.min.js")
@Scripts.Render("~/Scripts/skinable_tabs.min.js")

<script type="text/javascript">
    $(document).ready(function () {
        $('.tab_header_item').on('click', function () {
            $('.selected').removeClass('selected');
            $(this).addClass('selected');
        })

        var $tabs = $('.tabs_holder').skinableTabs({
            effect: 'transfading_down',
            skin: 'skin12',
            position: 'top',
            persist_tab: false
        });

        $('.detail').click(function () {
            var id = $(this).attr('data-id')
            $.post('/Home/FeedbackDetail', { id: id }, function (data) {
                $('.modal-form').addClass('show-up').html(data).addClass('bounceIn')
            })
        })
    })
</script>

<style>
    .course-list {
        padding:0;
        margin: auto;
        width: 100%;
        text-align:center;
        border-radius: 4px;
        box-shadow: 0 0 4px rgba(255, 255, 255, 0.6);
    }

    .course-list li {
        display:inline-block;
        list-style-type:none;
        margin: 5px 4px;
        padding: 10px;
        background-color: #f0f0f0;
        background-image: linear-gradient(#fefefe 0%, #f0f0f0 50%, #e6e6e6 51%);
        position:relative;
        border-width: 1px;
        border-style: solid;
        border-color: #dedede #bababa #aaa #bababa;
        box-shadow: 0 3px 3px rgba(255,255,255,.1), 0 3px 0 #bbb, 0 4px 0 #aaa, 0 2px 2px #444;
        border-radius: 10px;
    }

    .course-list li:after{

	    /* This creates a pseudo element inslide each LI */	

	    content:'.';
	    text-indent:-9999px;
	    overflow:hidden;
	    position:absolute;
	    width:0;
	    height:100%;
	    top:0;
	    left:0;
	    z-index:1;
	    opacity:0;

	    /* Gradients! */
        background: linear-gradient(to bottom, rgba(41,184,229,1) 0%, rgba(255,255,255,1) 27%, rgba(255,255,255,1) 70%, rgba(41,184,229,1) 100%);

	    /* Creating borders with box-shadow. Useful, as they don't affect the size of the element. */

	    box-shadow:-1px 0 0 #a3a3a3,-2px 0 0 #fff,1px 0 0 #a3a3a3,2px 0 0 #fff;
	    -moz-box-shadow:-1px 0 0 #a3a3a3,-2px 0 0 #fff,1px 0 0 #a3a3a3,2px 0 0 #fff;
	    -webkit-box-shadow:-1px 0 0 #a3a3a3,-2px 0 0 #fff,1px 0 0 #a3a3a3,2px 0 0 #fff;
        border-radius:10px;

	    /* This will create a smooth transition for the opacity property */

	    -moz-transition:0.25s all;
	    -webkit-transition:0.25s all;
	    -o-transition:0.25s all;
	    transition:0.25s all;
    }

    
    .course-list li:hover:after,
    .course-list li.selected:after,
    .course-list li.tab_selected:after,
    .course-list li:target:after{
	    /* This property triggers the CSS3 transition */
	    opacity:1;
        width: 100% !important;
    }

    .course-list li a{
	    color: #5d5d5d;
        color: #0483a0;
	    display: inline-block;
	    font: 15px/1 Lobster,Arial,sans-serif;
	    position: relative;
	    text-shadow: 1px 1px 0 rgba(255, 255, 255, 0.6);
	    z-index:2;
	    text-decoration:none !important;
	    white-space:nowrap;

        border: 1px solid #ccc;
        border-radius: 3px;
        box-shadow:0 1px 1px #ddd inset, 0 1px 0 #fff;
        background-color: white;
        padding: 10px;
    }

        .course-list li a:after {
            content: "";
            width:0;
            height:0;
            position:absolute;
            top: 28px;
            transform: translateX(-100%);
            transition:0.25s all;
        }

        .tab_selected a,
        .selected a,
        .course-list li:hover a {
            color: #cc0000 !important;
        }

        .tab_selected a:after,
        .selected a:after,
        .course-list li:hover a:after {
            width:calc(100% - 20px) !important;
            border: 1px solid rgb(0, 88, 169);
        }
</style>

<style>
    .feedback-item {
        height: auto;
        float: left;
        margin: 20px 0 20px 30px;
        max-width: 100%;
    }

        .feedback-item img {
            width: 100%;
            height: 170px;
            border: 1px solid #d9d9d9;
            padding: 5px;
            margin-bottom: 30px;
        }

    .intro-name {
        font-size: 17px;
        font-weight: bold;
        color: blue;
    }

    .intro-carreer {
        font-size: 15px;
    }

    .quote {
        font-size: 15px;
        height: auto;
        overflow-y: auto;
    }

        .quote span {
            font-size: 20px;
            font-weight: bold;
        }

    .clearfix-2-col:before, .clearfix-3-col:before {
        content: " ";
        display: table;
    }

    .clearfix-2-col:after, .clearfix-3-col:after {
        content: " ";
        display: table;
        clear: both;
    }

    /*1 col*/
    @@media (max-width: 654px) {
        .feedback-item {
            width: 360px !important;
            margin: 20px auto !important;
            float: none !important;
        }

        .clearfix-3-col {
            display: none !important;
        }

        .clearfix-2-col {
            display: none !important;
        }
    }

    /*2 col*/
    @@media (min-width: 654px) and (max-width:762px) {
        .feedback-item {
            width: 273px !important;
        }

        .clearfix-3-col {
            display: none !important;
        }

        .clearfix-2-col {
            display: block !important;
        }
    }

    /*3 col (small)*/
    @@media (min-width: 762px) {
        .feedback-item {
            width: 200px !important;
        }

        .clearfix-3-col {
            display: block !important;
        }

        .clearfix-2-col {
            display: none !important;
        }
    }

    /*3 col (full size)*/
    @@media (min-width: 992px) {
        .feedback-item {
            width: 264px !important;
        }

        .clearfix-3-col {
            display: block !important;
        }

        .clearfix-2-col {
            display: none !important;
        }
    }
</style>

